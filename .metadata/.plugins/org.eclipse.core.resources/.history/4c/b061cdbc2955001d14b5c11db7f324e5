package personnages;

public class Humain {
	private String nom;
	private String boissonFavorite;
	private int argent;

	public Humain(String nom, String boissonFavorite, int argent) {
		this.nom = nom;
		this.boissonFavorite = boissonFavorite;
		this.argent = argent;
	}

	public int getArgent() {
		return this.argent;
	}

	public String getNom() {
		return this.nom;
	}

	public void parler(String texte) {
		System.out.printf(texte, arg1, arg2);
	}

	public void direBonjour() {
		this.parler("Bonjour ! Je m'appelle %s et j'aime boire du %s %n", this.nom, this.boissonFavorite);
	}

	public void boire() {
		System.out.printf("Mmmm, un bon verre de %s ! GLOUPS ! %n", this.boissonFavorite);
	}

	public void acheter(String bien, int prix) {
		if (this.argent < prix) {
			System.out.printf("Vous n'avez pas assez d'argent pour acheter le bien : %s, il vous manque %d %n", bien,
					this.argent);
		} else {
			System.out.printf("Vous avez achetÃ© le bien : %s, au prix de %d %n", bien, prix);
		}
	}

	public static void main(String[] args) {
		Humain roger = new Humain("Roger", "Coca Frais chackal", 25);

	}
}
