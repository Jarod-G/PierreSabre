package personnages;

public class Humain {
	private String nom;
	private String boissonFavorite;
	private int argent;

	public int getArgent() {
		return this.argent;
	}

	public String getNom() {
		return this.nom;
	}

	public void direBonjour() {
		System.out.printf("Bonjour ! Je m'appelle %s et j'aime boire du %s %n", this.nom, this.boissonFavorite);
	}

	public void boire() {
		System.out.printf("Mmmm, un bon verre de %s ! GLOUPS ! %n", this.boissonFavorite);
	}

	public void acheter(String bien, int prix) {
		if (this.argent < prix) {
			System.out.printf("Vous n'avez pas assez d'argent pour acheter le bien : %s", bien);
		}
	}
}
